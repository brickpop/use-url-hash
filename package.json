{
    "name": "use-url-hash",
    "description": "A React hook to provide the upddated hash of the current URL",
    "version": "0.2.0",
    "main": "dist/index.js",
    "module": "dist/use-url-hash.esm.js",
    "typings": "dist/index.d.ts",
    "directories": {
        "example": "example",
        "test": "test"
    },
    "private": false,
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "keywords": [
        "URL",
        "hash",
        "location",
        "react",
        "hooks"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/brickpop/use-url-hash.git"
    },
    "bugs": {
        "url": "https://github.com/brickpop/use-url-hash/issues"
    },
    "homepage": "https://github.com/brickpop/use-url-hash#readme",
    "author": "Jør∂¡",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "size-limit": [
        {
            "path": "dist/use-url-hash.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/use-url-hash.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^4.9.1",
        "@types/react": "^16.14.2",
        "@types/react-dom": "^16.9.10",
        "husky": "^4.3.8",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "size-limit": "^4.9.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.1.0",
        "typescript": "^3.9.7"
    }
}